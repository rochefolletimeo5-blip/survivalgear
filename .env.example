# Database
DATABASE_URL="postgresql://user:password@localhost:5432/survivalgear?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# PayPal
NEXT_PUBLIC_PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="sandbox" # or "live" for production

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="SurvivalGear"

# Multi-currency
NEXT_PUBLIC_DEFAULT_CURRENCY="EUR"
NEXT_PUBLIC_SUPPORTED_CURRENCIES="EUR,USD,GBP"

# Import Agent
IMPORT_AGENT_MARGIN_PERCENTAGE="30" # Default margin for imported products

# Email (optional, for order confirmations)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM=""

# Analytics (optional)
NEXT_PUBLIC_GA_ID=""
